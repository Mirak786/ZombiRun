using UnityEngine;
using System.Collections;

public class CurrentScoreScript : MonoBehaviour {



	int score = 0;
	
	void Start()
	{
		score = PlayerPrefs.GetInt ("Score");
		this.guiText.text = "" + score;
		
	}
}

using UnityEngine;
using System.Collections;

public class GuiScoreScript : MonoBehaviour {

	int score = 0;

	void Start()
	{
		
		score = PlayerPrefs.GetInt ("Score");
		guiText.text = "" + score;
	}
}
